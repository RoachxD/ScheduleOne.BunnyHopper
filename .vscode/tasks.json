{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build: Il2Cpp Debug",
            "command": "dotnet",
            "type": "process",
            "args": [
                "build",
                "${workspaceFolder}/ScheduleOne.BunnyHopper.sln",
                "/property:GenerateFullPaths=true",
                "/consoleloggerparameters:NoSummary",
                "-c",
                "Debug_Il2Cpp"
            ],
            "problemMatcher": "$msCompile",
            "group": {
                "kind": "build",
                "isDefault": false
            },
            "detail": "Builds the Il2Cpp Debug flavor of Bunny Hopper."
        },
        {
            "label": "Build: Il2Cpp Release",
